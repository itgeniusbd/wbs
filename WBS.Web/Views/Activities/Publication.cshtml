@model IEnumerable<WBS.Web.Models.Publication>

@{
    ViewData["Title"] = "Publications";
    var type = ViewBag.Type as string;
}

<section class="page-header" style="background: linear-gradient(135deg, #00a99d 0%, #0077b6 100%); padding: 80px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center text-white">
                <h1 class="display-4 fw-bold mb-3">Publications</h1>
                <p class="lead">Browse our research, reports, and articles</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="btn-group" role="group" aria-label="Publication types">
                    <a href="/activities/publication" class="btn @(string.IsNullOrEmpty(type) ? "btn-primary" : "btn-outline-primary")">All</a>
                    <a href="/activities/publication?type=Research" class="btn @(type == "Research" ? "btn-primary" : "btn-outline-primary")">Research</a>
                    <a href="/activities/publication?type=Report" class="btn @(type == "Report" ? "btn-primary" : "btn-outline-primary")">Reports</a>
                    <a href="/activities/publication?type=Article" class="btn @(type == "Article" ? "btn-primary" : "btn-outline-primary")">Articles</a>
                    <a href="/activities/publication?type=Blog" class="btn @(type == "Blog" ? "btn-primary" : "btn-outline-primary")">Blogs</a>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var publication in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(publication.CoverImage))
                            {
                                <img src="@publication.CoverImage" class="card-img-top" alt="@publication.Title" style="height: 250px; object-fit: cover;" />
                            }
                            <div class="card-body">
                                <span class="badge bg-primary mb-2">@publication.PublicationType</span>
                                <h5 class="card-title">@publication.Title</h5>
                                @if (!string.IsNullOrEmpty(publication.Description))
                                {
                                    <p class="card-text">@(publication.Description.Length > 150 ? publication.Description.Substring(0, 150) + "..." : publication.Description)</p>
                                }
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="far fa-calendar me-1"></i>@publication.PublishedAt.ToString("MMM dd, yyyy")
                                </small>
                                @if (!string.IsNullOrEmpty(publication.FileUrl))
                                {
                                    <a href="@publication.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download me-1"></i>Download
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>No publications available at the moment.
                    </div>
                </div>
            }
        </div>
    </div>
</section>
